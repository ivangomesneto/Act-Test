{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PersistenceModule": {
    "MySQLConnection": "server=mysqldbcashflow;port=3307;userid=cashflow;password=cash123;database=CashFlow;"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      //Log local
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/log_.txt",
                  "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] {Message:lj} - Request: {RequestPath}{RequestBody} - Id: {RequestId}{NewLine}",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": "true",
                  "fileSizeLimitBytes": "3000000",
                  "retainedFileCountLimit": "4"
                }
              }
            ]
          }
        }
      },
      //Log Erro local
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/log_error_.txt",
                  "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] {Message:lj}{Exception} - Request: {RequestPath}{RequestBody} - Id: {RequestId}{NewLine}",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": "true",
                  "fileSizeLimitBytes": "3000000",
                  "retainedFileCountLimit": "4",
                  "restrictedToMinimumLevel": "Error"
                }
              }
            ]
          }
        }
      },
      //Log local
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/log_database.txt",
                  "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] {Message:lj} - Request: {RequestPath}{RequestBody} - Id: {RequestId}{NewLine}",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": "true",
                  "fileSizeLimitBytes": "3000000",
                  "retainedFileCountLimit": "4"
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Contains(SourceContext, 'Database')"
                }
              }
            ]
          }
        }
      }
    ]
  }
}